package view

import "time"

type Metadata struct {
	Language    string
	Title       string
	Description string
	Author      string
	Keywords    []string
	Image       string
	URL         string
	BaseURL     string
	Canonical   string
	CreatedAt   time.Time
	UpdatedAt   time.Time
	GoImport    string
	CustomHead  string

	Alternate *Alternate
}

type Alternate struct {
	Default  string
	Versions []KV
}

type KV struct {
	Key   string
	Value string
}

templ IndexPage(m *Metadata, blogPosts []*BlogPostPreview, featuredPosts []FeaturedPost) {
	<!DOCTYPE html>
	<html lang={ m.Language }>
		@Head(m)
		@IndexPageBody(m, blogPosts, featuredPosts)
	</html>
}
